{
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": false,
      "noImplicitAny": true,
      "allowJs": true,
      "outDir": "./zdist",
      "rootDir": "backend",
      "sourceMap": true,
      "typeRoots": ["@types", "./node_modules/@types"]
   },

   "compileOnSave": true,
   "include": ["backend"]
}
